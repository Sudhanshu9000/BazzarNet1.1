{
  "version": 2,
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "installCommand": "npm install && npm install --prefix backend",
  "buildCommand": "npm run build",
  "outputDirectory": "dist"
}
